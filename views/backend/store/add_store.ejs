<%- include('../../defualts/header.ejs') %>
<div class="container">
    <div class="page-inner">
        <div class="row">
            <div class="col-md-12">
                <form method="post" action="/admin/store">
                    <div class="card">
                        <div class="card-body">
                            <div class="col-sm-12 d-flex">
                                <div class="col-md-6 form-group">
                                    <label class="form-label" for="store_name">Store</label>
                                    <input class="col-sm-12 form-control" name="store_name" id="store_name"/>
                                </div>
                                <div class="col-md-6 form-group">
                                    <label class="form-label" for="city_ref">City</label>
                                    <select class="col-sm-12 form-select form-control" name="city_ref" id="city_ref">
                                        <% cities.forEach(city => { %>
                                            <option value="<%= city._id %>"><%= city.city_name %></option>
                                        <% }); %>
                                    </select>
                                </div>  
                            </div>
                            <div class="col-sm-12 form-group">
                                <label class="form-label" for="store_addr">Address</label>
                                <input class="form-control col-md-12" name="store_addr" id="store_addr"/>
                            </div>
                            <div class="col-sm-12 d-flex">
                                <div class="col-sm-6 form-group">
                                    <label class="form-label" for="store_lats">Latitude</label>
                                    <input class="form-control col-md-12" name="store_lats" id="store_lats"/>
                                </div>
                                <div class="col-sm-6 form-group">
                                    <label class="form-label" for="store_longs">Longitude</label>
                                    <input class="form-control col-md-12" name="store_longs" id="store_longs"/>
                                </div>
                            </div>
                            <hr>
                            <h4>Landmark Nearby</h4>
                            <div class="col-sm-12 d-flex">
                                <div class="col-sm-6 form-group">
                                    <label class="form-label" for="landmark_name">Name</label>
                                    <input class="form-control col-md-12" name="landmark_name" id="landmark_name"/>
                                </div>
                                <div class="col-sm-6 form-group">
                                    <label class="form-label" for="landmark_dist">Distance</label>
                                    <input class="form-control col-md-12" name="landmark_dist" id="landmark_dist"/>
                                </div>
                            </div>
                            
                        </div>
                        <div class="card-footer d-flex justify-content-center">
                            <button class="btn btn-primary" type="submit">Add</button>
                        </div>
                    </div>   
                </form>
            </div>
        </div>
        
    </div>
</div>


<%- include('../../defualts/footer.ejs') %> 
